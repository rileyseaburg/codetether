{
    "compilerOptions": {
        "strict": true,
        "module": "commonjs",
        "target": "es2020",
        "lib": [
            "es2020"
        ],
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "credentials/**/*.ts",
        "nodes/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
